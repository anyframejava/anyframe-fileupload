<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="messageSource"
		class="org.anyframe.spring.message.EncodingResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>message/message-generation</value>
				<value>message/message-moviefinder</value>
				<value>message/message-converter</value>
				<value>org/anyframe/mip/query/mipquery</value>
				<value>org/anyframe/flex/query/message/flex</value>
				<value>org/anyframe/hibernate/message/hibernate</value>
				<value>org/anyframe/idgen/message/idgen</value>
				<value>org/anyframe/message/springmvc</value>
				<value>org/anyframe/query/message/query</value>
				<value>org/anyframe/query/ria/message/queryria</value>
				<value>org/anyframe/util/properties/message/properties</value>
				<value>org/anyframe/generic/message/generic</value>
				<value>org/anyframe/struts/CommonResources</value>
				<value>anyframe/iam/security</value>
			</list>
		</property>
		<property name="defaultEncoding">
			<value>UTF-8</value>
		</property>
	</bean>
</beans> 